@page
@model Agencia_De_Turismo_App.Pages.CalculoPage.IndexModel
@{
    ViewData["Title"] = "Cálcular Reserva";
}

<h2>Calcular Valor da Reserva</h2>

<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="NumeroDiarias">Número de Diárias</label>
        <input asp-for="NumeroDiarias" class="form-control" type="number" min="1" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="ValorDiaria">Valor da Diária</label>
        <input asp-for="ValorDiaria" class="form-control" type="number" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Calcular Total</button>
</form>

@if (Model.ValorTotal.HasValue)
{
    <p><strong>Total da Reserva:</strong> @Model.ValorTotal.Value.ToString("C")</p>
}